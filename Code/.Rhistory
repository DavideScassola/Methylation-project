get_max_information_vector <- function(size)
{
probs = rep_len(0, size)
n = floor(sqrt(size))
for(i in 1:n)
{
probs[(1+((i-1)*n)):(i*n)] = 1/i
}
return(rbinom(n = size, size = 1, prob = probs))
}
mutilated <- function(v, missing_proportion)
